<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#2196F3"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:src="@drawable/back_arrow" />

    <ImageView
        android:id="@+id/generated_image"
        android:layout_width="370dp"
        android:layout_height="370dp"
        android:layout_below="@+id/btn_back"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="15dp"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_marginTop="100dp" />

    <ImageButton
        android:id="@+id/btn_fav"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:layout_below="@+id/generated_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="75dp"
        android:background="#FFFFFF"
        android:src="@drawable/vector_drawable_star" />

    <ImageButton
        android:id="@+id/btn_gallery"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:layout_below="@+id/generated_image"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="75dp"
        android:layout_toEndOf="@+id/btn_fav"
        android:background="#FFFFFF"
        android:src="@drawable/vector_drawable_upload" />

    <ImageButton
        android:id="@+id/imagebutton9"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:layout_below="@+id/generated_image"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="75dp"
        android:layout_toEndOf="@+id/btn_gallery"
        android:background="#FFFFFF"
        android:src="@drawable/vector_drawable_download" />

    <ImageButton
        android:id="@+id/imagebutton10"
        android:layout_width="49dp"
        android:layout_height="47dp"
        android:layout_below="@+id/generated_image"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="45dp"
        android:layout_toEndOf="@+id/imagebutton9"
        android:background="#FFFFFF"
        android:src="@drawable/vector_drawable_share" />

    <TextView
        android:id="@+id/image_title"
        android:layout_width="273dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="68dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="69dp"
        android:textSize="40sp"
        android:gravity="center"
        android:text="TextView" />

</RelativeLayout>


